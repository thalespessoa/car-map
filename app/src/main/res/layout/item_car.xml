<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:outlineSpotShadowColor="@color/colorBaseLight"
        android:elevation="10dp">
    <RelativeLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/dark_square_selector"
            android:padding="10dp"
            android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_directions_car_24px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/modelName"
                    style="@style/TextHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Model Name"/>

            <TextView
                    android:id="@+id/color"
                    style="@style/ListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    tools:text="Title"/>

        </LinearLayout>
        <ImageButton
                android:id="@+id/placeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:textColor="@color/colorBase"
                android:gravity="center"
                android:textSize="10sp"
                android:background="@drawable/base_oval_selector"
                android:src="@drawable/baseline_place_24px"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>